<% layout("/layouts/boilerplate") %>
<div class="container">
  <div id="filters" class="navbar-expand-md">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Tending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome-alt"></i></div>
      <p>Castle</p>
    </div>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#moreFilters"
      aria-expanded="false"
      aria-controls="moreFilters"
    >
      <i class="fa-solid fa-circle-chevron-right"></i>
    </button>
    <div class="collapse navbar-collapse" id="moreFilters">
      <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Awesome Pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Artic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tree"></i></div>
        <p>Site-seeling</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-spa"></i></div>
        <p>Spa & salon</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-utensils"></i></div>
        <p>Restraunts</p>
      </div>
    </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total before taxes</label
        >
      </div>
    </div>
  </div>
</div>
<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 mt-3">
  <% for(let listing of allListing) { %>
  <a href="/listings/<%=listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <strong><%= listing.title %> </strong><br />
          <small>
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          </small>
          <i class="tax-info"><small style="color: #707070">+18% GST</small></i>
        </p>
      </div>
    </div>
  </a>

  <% } %>
</div>
